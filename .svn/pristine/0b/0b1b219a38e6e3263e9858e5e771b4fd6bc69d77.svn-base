
.thead .layui-table th ,
.tbody .layui-table td {
    border-bottom: 1px solid #e6e6e6;
}
.thead .layui-table{
    margin-bottom: 0;
}
.tbody .layui-table{
    margin-top: 0;
}

.tbody{
    height: 410px;
}

.cursor-pointer{
    cursor: pointer;
}

.expanded{
    padding: 20px 40px 0px !important;
    background-color: #f8f8f8 !important;
}
.expanded .layui-table{
    margin-bottom: 20px;
}

.layui-laypage a,
.layui-laypage span{
    margin-bottom: 0;
    height: 26px;
    line-height: 26px;
    border: 0;
    padding: 0 10px;
}