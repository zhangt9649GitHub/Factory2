.gerenxinxi{
	display: flex;
}
.gerenxinxi .photo{
	width: 150px;
	margin-right: 150px;
	text-align: center;
	color: #aacee0 ;
}
.gerenxinxi .photo:after{
	display: block;
	clear: both;
	content: '.';
	visibility: hidden;
	height: 0;
}
.gerenxinxi .photo img{
	width: 100%;
	height: 100%;
}
.gerenxinxi .photo .image{
	width: 100%;
	height:200px;
	border: 1px solid #59788a;
	box-sizing: border-box;
	margin-bottom: 10px;
}
.gerenxinxi .content{
	flex: 1;
}

.gerenxinxi .content .info{
	width: 80%;

}
.gerenxinxi .content .info:after{
	display: block;
	clear: both;
	content: '.';
	visibility: hidden;
	height: 0;

}



.layui-card-body{
	margin-top: 20px;
}

/* 工资标准 */
.wage-standard{
	margin: 30px auto 0;
	width: 800px;
}
.wage-standard .layui-table input{
	width: 100%;
	border: 0;
}
.wage-standard .layui-table tr:hover{
	background: #fff;
}
.wage-standard .list{
	display: flex;
	align-items: center;
	margin-top: 15px;
}
.wage-standard .list .label{
	margin-right: 20px;
}
.wage-standard .list .block{
	flex: 1;
}

.wage-standard .list .layui-form-radio{
	margin-top: 0;
}
.wage-standard .title{
	margin: 15px 0;
}